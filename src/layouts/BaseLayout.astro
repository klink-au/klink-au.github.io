---
export interface Props {
    pageTitle: string;
};

export const canonicalHost = 'klink.au'; // Defined in Astro Config. In future get this from environmental variable
export const canonicalSite = `https://${canonicalHost}/`;
const canonicalURl = new URL(Astro.url.pathname, canonicalSite);

const { pageTitle } = Astro.props;

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="canonical" href={canonicalURl} />
        <link rel="sitemap" href="/sitemap-index.xml" />
		<meta name="generator" content={Astro.generator} />
		<title>Klink websites</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
        font-size: calc(15px + 0.390625vw);
	}

</style>
